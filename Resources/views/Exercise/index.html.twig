{# src/IServ/ExerciseBundle/Resources/views/Exercise/index.html.twig #}
{% extends "IServExerciseBundle::base.html.twig" %}

{% block page_content %}
    {% if is_granted('PRIV_EXERCISES') %}
        <div class="row mb">
            <div class="col-md-12">
                <a class="btn btn-link pull-right" href="{{ path('manage_exercise_index') }}">{{ icon('cog') }}{{ _('Manage exercises') }}</a>
            </div>
        </div>
    {% endif %}

    {% if exercises is not empty %}
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ _('Exercise') }}</th>
                        <th>{{ _('Start date') }}</th>
                        <th>{{ _('Deadline') }}</th>
                        <th>{{ _('Completed') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for exercise in exercises %}
                        <tr class="{% if exercise.endDate < date() %}{% if not exercise.hasSubmissions() %}warning text-warning{% else %}text-muted{% endif %}{% endif %}">
                            <td><a href="{{ path('exercise_show', {'id': exercise.id}) }}">{{ exercise.title }}</a>
                            </td>
                            <td>
                                {{ exercise.startdate|timeAgo }}
                            </td>
                            {% if exercise.endDate < date() and not exercise.hasSubmissions() %}
                                <td>
                                    <strong>{{ exercise.enddate|timeAgo }}</strong>
                                </td>
                            {% else %}
                                <td>
                                    {{ exercise.enddate|timeAgo }}
                                </td>
                            {% endif %}
                            <td class="text-success text-center">{% if exercise.hasSubmissions() %}{{ icon('ok') }}{% endif %}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-6 col-md-push-3">
                <div class="alert alert-success">
                    {{ icon('ok') }} {{ _('There are currently no exercises to do.') }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
